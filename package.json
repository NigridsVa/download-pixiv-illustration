{
  "name": "download-pixiv-manga",
  "version": "0.2.0",
  "description": "Uses Selenium to downloads all images or the animation belonging to a Pixiv illustration URL",
  "main": "lib/download-pixiv-illustration",
  "scripts": {
    "build": "tsc --build && chmod +x dist/bin/*.js && mv dist/bin/dpi.js dist/bin/dpi && mv dist/bin/download-pixiv-illustration.js dist/bin/download-pixiv-illustration",
    "lint": "eslint bin/* lib/*",
    "test": "exit 0"
  },
  "bin": {
    "download-pixiv-illustration": "dist/bin/download-pixiv-illustration.js",
    "dpi": "dist/bin/dpi.js"
  },
  "keywords": [
    "pixiv",
    "download",
    "images",
    "illustrations"
  ],
  "author": "NigridsVa <nigridsva@mailbox.org>",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "commander": "4.1.1",
    "fluent-ffmpeg": "2.1.2",
    "node-alias": "1.0.4",
    "pixiv-app-api": "1.0.4",
    "request": "2.88.0",
    "rimraf": "3.0.1",
    "unzipper": "0.10.8"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "2.1.14",
    "@types/node": "13.7.0",
    "@types/request": "2.48.4",
    "@types/rimraf": "2.0.3",
    "@types/unzipper": "0.10.1",
    "@typescript-eslint/eslint-plugin": "2.19.0",
    "@typescript-eslint/parser": "2.19.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-prettier": "3.1.2",
    "husky": "4.2.1",
    "prettier": "1.19.1",
    "pretty-quick": "2.0.1",
    "typescript": "3.7.5"
  }
}
